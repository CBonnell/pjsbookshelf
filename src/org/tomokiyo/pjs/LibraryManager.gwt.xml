<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 1.6.4//EN" "http://google-web-toolkit.googlecode.com/svn/tags/1.6.4/distro-source/core/src/gwt-module.dtd">
<module rename-to='librarymanager'>
  <!-- Inherit the core Web Toolkit stuff.                        -->
  <inherits name='com.google.gwt.user.User'/>
  <inherits name='com.google.gwt.xml.XML'/> 
  <inherits name='com.google.gwt.http.HTTP'/>
  <inherits name='com.allen_sauer.gwt.voices.gwt-voices'/>
<!--   <inherits name='com.google.gwt.user.theme.standard.Standard'/> -->
  <!-- to avoid bug #3494 -->
  <inherits name='com.google.gwt.user.theme.standard.StandardResources'/>
  <!-- <inherits name='com.google.gwt.user.theme.chrome.Chrome'/> -->
  <!-- <inherits name='com.google.gwt.user.theme.dark.Dark'/>     -->

  <inherits name="com.google.gwt.resources.Resources" />

<!--   <stylesheet src='LibraryManager.css'/> -->

  <!-- Specify the app entry point class.                         -->
  <entry-point class='org.tomokiyo.pjs.client.LibraryManager'/>

  <!-- don't forget to edit 'war/WEB-INF/web.xml' for server mode as well -->
  <servlet path="/dbLookupService"
	   class="org.tomokiyo.pjs.server.DBLookupServiceImpl"/>
  <servlet path="/amazonRPCService"
	   class="org.tomokiyo.pjs.server.AmazonLookupServiceImpl"/>
  <servlet path="/kakasiService"
	   class="org.tomokiyo.pjs.server.YahooFuriganaService"/>
  <servlet path="/download"
	   class="org.tomokiyo.pjs.server.FileDownloaderServlet"/>
</module>
